# ABService Environment Variables
# Copy this file to .env and modify the values as needed

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/abservice
DB_USERNAME=abservice
DB_PASSWORD=abservice
DB_REACTIVE_URL=postgresql://localhost:5432/abservice

# Keycloak Configuration
OIDC_AUTH_SERVER_URL=http://localhost:8180/realms/abservice
OIDC_CLIENT_ID=abservice-backend
OIDC_CLIENT_SECRET=your-client-secret
OIDC_TLS_VERIFICATION=none

# JWT Configuration
JWT_ISSUER=http://localhost:8180/realms/abservice
JWT_AUDIENCE=abservice-backend
JWT_EXPIRATION=3600
JWT_SIGN_KEY_LOCATION=privateKey.pem
JWT_VERIFY_KEY_LOCATION=publicKey.pem

# Application Configuration
APP_ENVIRONMENT=development
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:4321
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization
CORS_ALLOW_CREDENTIALS=true

# Database Pool Configuration
DB_POOL_MIN_SIZE=5
DB_POOL_MAX_SIZE=20
DB_POOL_INITIAL_SIZE=5
DB_QUERY_TIMEOUT=30

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Logging Configuration
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/abservice.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_HISTORY=30

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# MinIO Configuration (Optional)
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_BUCKET_NAME=abservice

# Mail Configuration (Development)
MAIL_HOST=localhost
MAIL_PORT=1025
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@abservice.com
MAIL_FROM_NAME=ABService

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# API Configuration
API_RATE_LIMIT=1000
API_RATE_LIMIT_WINDOW=3600
API_MAX_REQUEST_SIZE=10MB

# Development Configuration
QUARKUS_HIBERNATE_ORM_LOG_SQL=false
QUARKUS_LOG_LEVEL=INFO
QUARKUS_DEV_INSTRUMENTATION=true
QUARKUS_DEV_RELOAD=true
