<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Exclude generated files -->
    <Match>
        <Class name="~.*\._.*"/>
    </Match>

    <!-- Exclude Quarkus generated classes -->
    <Match>
        <Class name="~.*\._.*_Bean"/>
    </Match>

    <Match>
        <Class name="~.*\._.*_ClientProxy"/>
    </Match>

    <Match>
        <Class name="~.*\._.*_Subclass"/>
    </Match>

    <!-- Exclude test classes from certain checks -->
    <Match>
        <Class name="~.*Test.*"/>
        <Bug pattern="UWF_UNWRITTEN_FIELD"/>
    </Match>

    <Match>
        <Class name="~.*Test.*"/>
        <Bug pattern="UUF_UNUSED_FIELD"/>
    </Match>

    <!-- Exclude JPA entities from certain checks -->
    <Match>
        <Class name="~.*\.entity\..*"/>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>

    <Match>
        <Class name="~.*\.entity\..*"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Exclude DTOs from certain checks -->
    <Match>
        <Class name="~.*\.dto\..*"/>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>

    <Match>
        <Class name="~.*\.dto\..*"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

    <!-- Exclude configuration classes -->
    <Match>
        <Class name="~.*\.config\..*"/>
        <Bug pattern="UWF_UNWRITTEN_FIELD"/>
    </Match>

    <!-- Exclude CDI beans from certain checks -->
    <Match>
        <Class name="~.*\.service\..*"/>
        <Bug pattern="UWF_UNWRITTEN_FIELD"/>
    </Match>

    <!-- Exclude REST controllers from certain checks -->
    <Match>
        <Class name="~.*\.controller\..*"/>
        <Bug pattern="UWF_UNWRITTEN_FIELD"/>
    </Match>

    <!-- Allow certain patterns in Quarkus applications -->
    <Match>
        <Bug pattern="SE_BAD_FIELD"/>
        <Class name="~.*\.entity\..*"/>
    </Match>

    <!-- Exclude serialization issues for entities -->
    <Match>
        <Bug pattern="SE_NO_SERIALVERSIONID"/>
        <Class name="~.*\.entity\..*"/>
    </Match>

    <!-- Exclude certain security issues for development -->
    <Match>
        <Bug pattern="HARD_CODE_PASSWORD"/>
        <Class name="~.*\.config\..*"/>
    </Match>

    <!-- Exclude logging issues for certain classes -->
    <Match>
        <Bug pattern="SLF4J_LOGGER_SHOULD_BE_PRIVATE"/>
        <Class name="~.*\.service\..*"/>
    </Match>

    <Match>
        <Bug pattern="SLF4J_LOGGER_SHOULD_BE_PRIVATE"/>
        <Class name="~.*\.controller\..*"/>
    </Match>

</FindBugsFilter>

